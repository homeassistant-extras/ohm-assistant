{
  "name": "ohm-assistant",
  "version": "0.4.0",
  "description": "A modern Home Assistant card for displaying energy usage",
  "source": "src/index.ts",
  "module": "dist/ohm-assistant.js",
  "author": "Patrick Masters",
  "license": "MIT",
  "keywords": [
    "home-assistant",
    "custom-card",
    "electricity",
    "energy",
    "power"
  ],
  "scripts": {
    "watch": "parcel watch",
    "build": "parcel build",
    "format": "prettier --write .",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' mocha",
    "test:coverage": "nyc npm run test",
    "test:watch": "TS_NODE_PROJECT='./tsconfig.test.json' mocha --watch",
    "update": "npx npm-check-updates -u && yarn install"
  },
  "targets": {
    "module": {
      "includeNodeModules": true
    }
  },
  "dependencies": {
    "@lit/task": "^1.0.3",
    "chart.js": "^4.5.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "fast-deep-equal": "^3.1.3",
    "lit": "^3.3.2",
    "memoize-one": "^6.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@open-wc/testing-helpers": "^3.0.1",
    "@parcel/config-default": "^2.16.3",
    "@parcel/packager-ts": "^2.16.3",
    "@parcel/transformer-typescript-tsc": "^2.16.3",
    "@parcel/transformer-typescript-types": "^2.16.3",
    "@trivago/prettier-plugin-sort-imports": "^6.0.1",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/sinon": "^21.0.0",
    "chai": "^6.2.2",
    "jsdom": "^27.4.0",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "parcel": "^2.16.3",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
